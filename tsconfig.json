{
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "jsx": "react-native",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib",
        "strict": true,
        "watch": true,
        "baseUrl": ".",
        "removeComments": false,
        "listEmittedFiles": true
    }
}